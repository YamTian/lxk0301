name: Sync To Gitee

on: 
  workflow_dispatch:
  push:
    branches: master

jobs:
  sync:
    runs-on: ubuntu-latest
    steps:
      - uses: wearerequired/git-mirror-action@master
        env:
          SSH_PRIVATE_KEY: ${{ secrets.GITEE_PRIVATE_KEY }}
        with:
          source-repo: "git@github.com:YamTian/jd_scripts.git"
          destination-repo: "git@gitee.com:chiupam/jd_scripts.git"
